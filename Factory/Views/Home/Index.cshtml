<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Dr. SillyStringz Factory!</title>
    <link 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" 
      rel="stylesheet" 
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" 
      crossorigin="anonymous">
  </head>
  <body>
    @{
      Layout = "_Layout";
    }

    @using Factory.Models;

    <h1>Welcome to Dr.SillyStringz Factory !</h1>

    <h2>Engineers:</h2>

     @if (@Model.Count == 0)
    {
      <h6>No engineers have been added yet!</h6>
    } 
      <ul>
      @foreach(Engineer engineer in ViewBag.Engineer)
      {
        <p>@Html.ActionLink($"{engineer.Name}", "Details", "Engineers", new { id = engineer.EngineerId })</p>
      }
    </ul>  
         <p>@Html.ActionLink("Create an engineer", "Create", "Engineers")</p>

    <h2>Machines:</h2>

     @if (@Model.Count == 0)
    {
      <h6>No machines have been added yet!</h6>
    } 
    <ul>
      @foreach(Machine machine in ViewBag.Machine)
      {
        <p>@Html.ActionLink($"{machine.Name}", "Details", "Machines", new { id = machine.MachineId })</p>
      }
    </ul>    
    <p>@Html.ActionLink("Create a machine", "Create", "Machines")</p>

  </body>
</html>